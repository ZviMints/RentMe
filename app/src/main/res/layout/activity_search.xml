<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/Sky"
    android:orientation="vertical">

    <!-- Header -->
    <include layout="@layout/header" />
    <!-- End Header-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="@color/lightGray"/>


        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="קטגוריה"
            android:textColor="@color/DarkGray"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/categoty1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:drawableRight="@drawable/ic_chevron_right_darksky_24dp"
            android:layout_alignParentTop="true"
            android:textColor="@color/DarkBlue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="תת קטגוריה"
            android:textColor="@color/DarkGray"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/categoty2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:drawableRight="@drawable/ic_chevron_right_darksky_24dp"
            android:layout_alignParentTop="true"
            android:textColor="@color/DarkBlue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="איזור"
            android:textColor="@color/DarkGray"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/categoty3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:drawableRight="@drawable/ic_chevron_right_darksky_24dp"
            android:layout_alignParentTop="true"
            android:textColor="@color/DarkBlue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pricetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="מחיר"
            android:textColor="@color/DarkGray"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/price1"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/form"
                android:hint="ממחיר"
                android:padding="10dp" />

            <EditText
                android:id="@+id/price2"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/form"
                android:hint="עד ממחיר"
                android:padding="10dp" />

        </LinearLayout>








    </LinearLayout>

    <Button
        android:id="@+id/back"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGray"
        android:drawableRight="@drawable/ic_chevron_right_darksky_24dp"
        android:text=" חזור לדף הקודם"
        android:layout_alignParentTop="true"
        android:textColor="@color/DarkGray"
        android:textStyle="bold" />


</LinearLayout>