<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/Sky"
    android:layout_height="match_parent"
    tools:context=".activities.admin.CategoriesManagement"
    android:orientation="vertical">



    <ImageView
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="70dp"
        android:src="@drawable/quickadminpanellogo"
        android:background="@color/DarkGreen"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000" />
    <Button
        android:id="@+id/backMain"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGray"
        android:layout_gravity="bottom"
        android:drawableRight="@drawable/ic_chevron_right_darksky_24dp"
        android:text=" חזור לדף הראשי"
        android:textColor="@color/DarkGray"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:text="רשימת קטגוריות"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/categoriesListView"
        android:layout_margin="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/removeFromCategories"
            android:layout_width="@dimen/fui_auth_method_button_width"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="#c0392b"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_delete_black_24dp"
            android:text="מחק מקטגוריות"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/remove_from_categories_spinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/Sky"
            android:layout_height="wrap_content"
            android:padding="10dp"/>

    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/removeFromConf"
            android:layout_width="@dimen/fui_auth_method_button_width"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="#d35400"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_delete_black_24dp"
            android:text="מחק מקונפרציות"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/remove_from_conf_spinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/Sky"
            android:layout_height="wrap_content"
            android:padding="10dp" />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addCategory"
            android:layout_width="@dimen/fui_auth_method_button_width"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="#16a085"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_add_black_24dp"
            android:text="הוסף קטגורייה"
            android:textColor="#fff"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/category_form_add"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/Sky"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="שם קטגורייה..." />

    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_margin="35dp" />




</LinearLayout>