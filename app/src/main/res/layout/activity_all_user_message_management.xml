<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/Sky"
    android:layout_height="match_parent"
    tools:context=".activities.admin.CategoriesManagement"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="70dp"
        android:src="@drawable/quickadminpanellogo"
        android:background="@color/DarkGreen"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000" />
    <Button
        android:id="@+id/back"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGray"
        android:drawableRight="@drawable/ic_chevron_right_darksky_24dp"
        android:text=" חזור לדף הקודם"
        android:layout_alignParentTop="true"
        android:textColor="@color/DarkGray"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="שלח הודעה (עם התראה) לכלל המשתמשים"
        android:textColor="@color/DarkGray"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/message_content"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/form"
        android:layout_gravity="center_vertical"
        android:hint="תוכן ההודעה"
        android:padding="10dp" />


    <Button
        android:id="@+id/publish_message"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:background="@color/Orange"
        android:layout_gravity="bottom"
        android:drawableTop="@drawable/ic_file_upload_black_24dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="שלח"
        android:textColor="#fff"
        android:textStyle="bold" />



</LinearLayout>