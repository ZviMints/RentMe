<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/Sky"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"/>

        <Button
            android:id="@+id/back"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGray"
            android:drawableRight="@drawable/ic_chevron_right_darksky_24dp"
            android:text=" חזור לדף הקודם"
            android:layout_alignParentTop="true"
            android:textColor="@color/DarkGray"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="חיפוש"
            android:layout_marginBottom="13dp"
            android:textSize="25sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="קטגוריה"
            android:textColor="@color/DarkGray"
            android:layout_marginBottom="3dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:inputType="textNoSuggestions"
            android:id="@+id/MainCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_chevron_right_darksky_24dp"
            android:layout_alignParentTop="true"
            android:textColor="@color/DarkBlue"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:spinnerMode="dropdown"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:text="איזור"
            android:textColor="@color/DarkGray"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:inputType="textNoSuggestions"
            android:id="@+id/area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_chevron_right_darksky_24dp"
            android:layout_alignParentTop="true"
            android:textColor="@color/DarkBlue"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_centerHorizontal="true"
            android:spinnerMode="dropdown"/>

        <TextView
            android:id="@+id/pricetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="מחיר"
            android:layout_marginBottom="3dp"
            android:textColor="@color/DarkGray"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <EditText
                android:id="@+id/price1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/form"
                android:hint="ממחיר"
                android:padding="10dp" />

            <EditText
                android:id="@+id/price2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/form"
                android:hint="עד ממחיר"
                android:padding="10dp" />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="15dp"
        android:background="@color/DarkBlue"
        android:drawableLeft="@drawable/ic_chevron_left_white_24dp"
        android:padding="4dp"
        android:text="חיפוש"
        android:textColor="#fff"></Button>



</LinearLayout>